{
  "builders": [{
    "name": "kali-2016.2",
    "type": "virtualbox-iso",
    "guest_os_type": "Debian_64",
    "guest_additions_mode": "upload",
    "guest_additions_path": "VBoxGuestAdditions.iso",
    "headless": true,
    "iso_urls": [
      "../kali-linux-2017.1-amd64.iso",
      "http://cdimage.kali.org/kali-2017.1/kali-linux-2017.1-amd64.iso"
    ],
    "iso_checksum": "49b1c5769b909220060dc4c0e11ae09d97a270a80d259e05773101df62e11e9d",
    "iso_checksum_type": "sha256",
    "ssh_username": "root",
    "ssh_password": "toor",
    "ssh_wait_timeout": "30m",
    "shutdown_command": "echo 'packer' | shutdown -h now",
    "vm_name": "kali-2016.2",
    "format": "ova",
    "hard_drive_interface": "sata",
    "disk_size": 20000,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "8192"],
      ["modifyvm", "{{.Name}}", "--cpus", "2"],
      ["modifyvm", "{{.Name}}", "--vram", "128"],
      ["modifyvm", "{{.Name}}", "--clipboard", "bidirectional"],
      ["modifyvm", "{{.Name}}", "--rtcuseutc", "on"],
      ["modifyvm", "{{.Name}}", "--vrde", "off"],
      ["storagectl", "{{.Name}}", "--name", "SATA Controller", "--hostiocache", "on"]
    ],
    "boot_wait": "10s",
    "boot_command": [
      "<esc><wait>",
      "install ",
      "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-2016.2.cfg ",
      "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
      "netcfg/get_hostname=kali ",
      "netcfg/get_domain=vagrantup.com ",
      "fb=false debconf/frontend=noninteractive ",
      "console-setup/ask_detect=false <wait>",
      "console-keymaps-at/keymap=us ",
      "keyboard-configuration/xkb-keymap=us <wait>",
      "<enter><wait10><wait10><wait10>",
      "<enter><wait>"
    ],
    "http_directory": "http"
  }]
}
