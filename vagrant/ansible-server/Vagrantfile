# -*- mode: ruby -*-

Vagrant.configure("2") do |config|
  config.vm.box = "ansible-server"
  config.vm.box_check_update = false
  config.vm.define "ansible-server"
  config.vm.boot_timeout = 600
  config.vm.synced_folder ".", "/vagrant", disabled: true
  config.vm.synced_folder ".", "/ansible", owner: "vagrant", group: "vagrant", :mount_options => ["fmode=600"]
  # For persistent storage, mount ansible as /etc/ansible
  config.vm.synced_folder "../../ansible", "/etc/ansible", owner: "root", group: "vagrant", :mount_options => ["fmode=660"]
end

